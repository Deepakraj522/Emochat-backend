    {
      "name": "üí¨ Chat Management",
      "item": [
        {
          "name": "Get User Chat Rooms",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/chat/rooms",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "rooms"]
            }
          }
        },
        {
          "name": "Create Chat Room",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('room_id', response.data.room._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Chat Room\",\n  \"description\": \"A room for testing emotions\",\n  \"isPrivate\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/chat/rooms",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "rooms"]
            }
          }
        },
        {
          "name": "Send Message",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('message_id', response.data.message._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"I'm feeling great today! This is amazing!\",\n  \"roomId\": \"{{room_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/chat/messages",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "messages"]
            }
          }
        },
        {
          "name": "Get Room Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/chat/rooms/{{room_id}}/messages",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "rooms", "{{room_id}}", "messages"]
            }
          }
        },
        {
          "name": "Join Chat Room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/chat/rooms/{{room_id}}/join",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "rooms", "{{room_id}}", "join"]
            }
          }
        }
      ]
    },
    {
      "name": "üòä Emotion Analysis",
      "item": [
        {
          "name": "Analyze Text Emotion",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"I'm feeling incredibly happy and excited about this project!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/emotion/analyze",
              "host": ["{{base_url}}"],
              "path": ["api", "emotion", "analyze"]
            }
          }
        },
        {
          "name": "Get User Emotion Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/emotion/profile?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "emotion", "profile"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Number of emotions per page (default: 10)"
                }
              ]
            }
          }
        },
        {
          "name": "Get Room Emotion Trends",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/emotion/trends/{{room_id}}?days=7&page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "emotion", "trends", "{{room_id}}"],
              "query": [
                {
                  "key": "days",
                  "value": "7",
                  "description": "Number of days to analyze (default: 7)"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Number of emotions per page (default: 20)"
                }
              ]
            }
          }
        },
        {
          "name": "Get Message Emotions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/emotion/message/{{message_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "emotion", "message", "{{message_id}}"]
            }
          }
        },
        {
          "name": "Get Emotion History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/emotion/history?days=30&page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "emotion", "history"],
              "query": [
                {
                  "key": "days",
                  "value": "30",
                  "description": "Number of days to analyze (default: 7, max: 365)"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Number of emotions per page (default: 20)"
                }
              ]
            }
          }
        },
        {
          "name": "Get Emotion Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
